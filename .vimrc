filetype off
filetype indent on
filetype plugin indent on

syntax on

set omnifunc=javascriptcomplete#CompleteJS
set omnifunc=htmlcomplete#CompleteTags
set omnifunc=csscomplete#CompleteCSS
set omnifunc=phpcomplete#CompletePHP

set ruler
set modelines=0
set wrap
set scs

set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set noshiftround

set scrolloff=5
set backspace=indent,eol,start
set ttyfast
set laststatus=2

set showmode
set showcmd
set matchpairs+=<:>

set list
set listchars=tab:›\ ,trail:•,extends:#,nbsp:.
set number

set encoding=utf-8
set hlsearch
set incsearch
set ignorecase
set smartcase
set autoindent
