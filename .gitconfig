	email = gabrielluislopes00@gmail.com
	name = Gabriel Lopes
[core]
	editor = vim
[push]
	followTags = true
[init]
	defaultBranch = main
[alias]
	s = !git status -s
	c = !git add . && git commit -m
	l = !git log --pretty=format:'%C(blue)%h%C(magenta)%d %C(white)%s %C(red)❯ %C(cyan)%cn, %C(green)%cr'
	p = !git push -u origin main
	kill = !rm -rf .git
	amend = !git add --all && git commit --amend --no-edit
	setup = !git clone git@github.com:gabriellopes00/node-project-setup.git
	count = !git shortlog -s --grep
		sf = show --name-only
	incoming = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' ..@{u})
  outgoing = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' @{u}..)
  unstage = reset HEAD --
  undo = checkout --
  rollback = reset --soft HEAD~1

# git log formats --> git log --pretty=format: 'flags here'
# Flags:
# %cn -> who did the commit
# %cr -> relative commit date
# %H -> commit hash(id)
# %h -> commit resumed hash(id)
# %d -> branchs and tags in the commit
# %s -> commit message
# %C -> define a color that will be used for each flag, eg: %C(red) || %C(green)...